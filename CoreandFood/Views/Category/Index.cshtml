@model List<CoreandFood.Data.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1>Category List</h1>
<br />



<table class="table table-bordered">
    <tr class="table table-info">
        <th>Category Id</th>
        <th>Category Name</th>
        <th>Category Description</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.Status == true)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td><a href="/Category/CategoryDelete/@item.CategoryID" class="btn btn-danger">Delete</a></td>
                <td><a href="/Category/CategoryGet/@item.CategoryID" class="btn btn-success">Update</a></td>

            </tr>
        }
    }

</table>
<br />
<td><a href="/Category/CategoryAdd" class="btn btn-success">New Category</a></td>